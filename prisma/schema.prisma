generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String      @unique
  password     String
  role         Role        @default(USER)
  departmentId Int?
  department   Department? @relation(fields: [departmentId], references: [id])
  tickets      Ticket[]    @relation("UserTickets")
  assigned     Ticket[]    @relation("AgentTickets")
  createdAt    DateTime    @default(now())
  Comment      Comment[]
}

model Ticket {
  id              Int          @id @default(autoincrement())
  title           String
  description     String
  status          Status       @default(OPEN)
  priority        Priority     @default(MEDIUM)
  userId          Int
  user            User         @relation("UserTickets", fields: [userId], references: [id])
  assignedAgentId Int?
  assignedAgent   User?        @relation("AgentTickets", fields: [assignedAgentId], references: [id])
  departmentId    Int
  department      Department   @relation(fields: [departmentId], references: [id])
  comments        Comment[]
  attachments     Attachment[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Department {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  users   User[]
  tickets Ticket[]
}

model Comment {
  id        Int         @id @default(autoincrement())
  content   String
  type      CommentType @default(NOTE)
  ticketId  Int
  ticket    Ticket      @relation(fields: [ticketId], references: [id])
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
}

model Attachment {
  id         Int      @id @default(autoincrement())
  filename   String
  url        String
  ticketId   Int
  ticket     Ticket   @relation(fields: [ticketId], references: [id])
  uploadedAt DateTime @default(now())
}

enum Role {
  USER
  AGENT
  ADMIN
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum CommentType {
  NOTE
  ASSIGNMENT
  REASSIGNMENT
  STATUS_UPDATE
  PRIORITY_UPDATE
  CREATED
}
