generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  tickets Ticket[] @relation("UserTickets")
  assigned Ticket [] @relation("Agent Tickets")
  createdAt  DateTime @default(now())
}

model Ticket{
  id Int @default(autoincrement())
  title String
  description String
  status Status @default(OPEN)
  priority Priority @default(MEDIUM)
  userId Int
  user User @relation("UserTickets",fields: [userId],references: [id])
  assignedAgentId Int
  assignedAgent User? @relation("AgentTickets",fields: [assignedAgentId])
  departmentId Int
  department Department @relation(fields: [departmentId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Department{
  id Int @default(autoincrement())
  name String @unique
  tickets Ticket[]
}

model Comment{
  id Int @default(autoincrement())
  content String
  ticketId Int
  ticket Ticket @relation(fields: [ticketId],references: [id])
  userId Int
  user User @relation(fields: [userId],references: [id])
  createdAt DateTime @default(now())
}


enum Role {
  USER
  AGENT
  ADMIN
}

enum Status{
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority{
  LOW
  MEDIUM 
  HIGH
  URGENT
}
